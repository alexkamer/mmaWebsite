# Azure OpenAI Configuration for MMA Query Feature with Agno
# Copy this file to .env and fill in your Azure OpenAI credentials

# Agno Azure OpenAI Configuration (following Agno conventions)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://azure-oai-east2.openai.azure.com/
AZURE_DEPLOYMENT=gpt-4-1

# Legacy variables for backward compatibility
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-1

# Optional: Set Flask environment
FLASK_ENV=development
FLASK_DEBUG=1