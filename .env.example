# MMA Website Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production
LOG_LEVEL=INFO

# Database Configuration
# For development: uses data/mma.db (SQLite)
# For production: set DATABASE_URL to PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost/mma_website

# Cache Configuration
CACHE_TYPE=SimpleCache
CACHE_DEFAULT_TIMEOUT=300
# For production with Redis:
# CACHE_TYPE=RedisCache
# REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=200 per hour
# For production with Redis:
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Azure OpenAI Configuration (for AI features)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://azure-oai-east2.openai.azure.com/
AZURE_DEPLOYMENT=gpt-4-1
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-1

># ESPN API Configuration
ESPN_API_TIMEOUT=10

# Scheduler Configuration
SCHEDULER_ENABLED=True
# Cron format: minute hour day month day_of_week
RANKINGS_UPDATE_CRON=0 3 * * *  # Daily at 3 AM UTC

# SQLAlchemy Configuration
SQLALCHEMY_ECHO=False